<%= form_for @promo, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>

    </div>
  </div>
  <div class="control-group">
    <%= f.label :pos, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :pos, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :img_link, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :img_link, :class => 'text_field' %>
      <% unless @promo.img_link == "" %>
        <%= image_tag @promo.img_link, :size => "100x100", class: "img-rounded", id: "foto_derecha" %>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                promos_path, :class => 'btn' %>
  </div>
<% end %>
